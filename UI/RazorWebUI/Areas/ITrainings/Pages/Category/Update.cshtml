@page
@model RazorWebUI.Areas.ITrainingCategorys.Pages.Category.UpdateModel
@{
}
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">UPDATE TRAINING CATEGORY</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="TrainingCategory.Id" />

                    <div class="form-group">
                        <label asp-for="TrainingCategory.Title" class="control-label"></label>
                        <input asp-for="TrainingCategory.Title" class="form-control" id="upper1" oninput="myUppercase('upper1')" />
                        <span asp-validation-for="TrainingCategory.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TrainingCategory.Abbreviation" class="control-label"></label>
                        <input asp-for="TrainingCategory.Abbreviation" class="form-control" id="" oninput="myUppercase('upper1')" />
                        <span asp-validation-for="TrainingCategory.Abbreviation" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TrainingCategory.Description" class="control-label"></label>
                        <textarea asp-for="TrainingCategory.Description" class="form-control"></textarea>
                        <span asp-validation-for="TrainingCategory.Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

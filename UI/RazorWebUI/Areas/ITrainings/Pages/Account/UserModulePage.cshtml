@page
@model RazorWebUI.Areas.ITrainings.Pages.Account.UserModulePageModel
@{
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">TRAINING MODULE</h3>


    </div>
    <!-- /.card-header -->
    <div class="card-body">

        <div class="row">
            <div class="col-md-12">
                @{ int sn = 0;}
                @foreach (var item in Model.Module)
                {
                    <div style=" box-shadow: 0px 2px 2px 0px rgb(50 50 50 / 83%);padding:10px;margin-bottom:5px;">
                        <div class="row">
                            <div class="col-md-6">
                                @{sn++; }
                                <h5><b style="margin-right:15px;font-size:20px;">@sn</b>@item.Title</h5>
                                <br />
                                <p>
                                    @item.Content
                                </p>
                            </div>
                            <div class="col-md-6">
                                @{ int ssn = 0;}
                                @foreach (var itemlist in item.Topic)
                                {
                                    <div style=" box-shadow: 0px 2px 2px 0px rgb(50 50 50 / 83%);padding:10px;margin-bottom:5px;">
                                        <div class="row">
                                            <div class="col-md-12">
                                                @{ssn++; }
                                                <h5><b style="margin-right:15px;font-size:20px;">Topic @ssn: </b>@itemlist.Title</h5>
                                              
                                                <p>
                                                    @itemlist.Description
                                                </p>
                                                <a asp-page="./ViewModule" class="btn btn-primary btn-xs">View Module</a>
                                            </div>
                                             
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

    </div>


</div>
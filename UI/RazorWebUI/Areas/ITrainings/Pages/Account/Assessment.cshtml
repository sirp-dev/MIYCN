@page
@model RazorWebUI.Areas.ITrainings.Pages.Account.AssessmentModel
@{
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    @Model.Title ON @Model.Training.Title (@Model.Training.StartDate.ToString("ddd dd MMM, yyyy") -
                    @Model.Training.EndDate.ToString("ddd dd MMM, yyyy"))

                    <br />
                    <span style="font-size:15px;">
                        @Model.Training.Address
                    </span>


                </h3><a asp-page="./Info" asp-route-id="@Model.Training.Id" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

            </div>


            <hr />
            <div class="card-header">
                <h6>
                    @Model.Instruction
                </h6>
            </div>
            <!-- /.card-header -->
            <form method="post">
                <div class="card-body">
                    
                    <input asp-for="Exampath" type="hidden" />
                    <input asp-for="TrainingId" type="hidden" value="@Model.Training.Id" />
                    <div class="row">
                        <div class="col-md-12">
                            @{ int sn = 0;}
                            @foreach (var item in Model.Datas)
                            {
                                <div style=" box-shadow: 0px 2px 2px 0px rgb(50 50 50 / 83%);padding:10px;margin-bottom:5px;">
                                    <div class="row">
                                        <div class="col-md-6">
                                            @{sn++; }
                                            <h5><b style="margin-right:15px;font-size:20px;">@sn</b>@item.Question</h5>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="answer_@item.Id" id="true_@sn" value="1" required>
                                                <label class="form-check-label" for="true_@sn">Yes</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="answer_@item.Id" id="no_@sn" value="2" required>
                                                <label class="form-check-label" for="no_@sn">No</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="answer_@item.Id" id="dont_know_@sn" value="3" required>
                                                <label class="form-check-label" for="dont_know_@sn">I Don't know</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>


                    <!-- /.row -->
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a href="javascript:history.back()" class="btn bg-gradient-warning btn-sm">Back</a>

                </div>
            </form>
        </div>
    </div>
</div>
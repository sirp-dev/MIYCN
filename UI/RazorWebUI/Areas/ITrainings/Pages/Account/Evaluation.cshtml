@page
@model RazorWebUI.Areas.ITrainings.Pages.Account.EvaluationModel
@{
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">
                    DIALY EVALUTION
                </h3>
                <a asp-page="./Info" asp-route-id="@Model.Training.Id" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

            </div>
            <div class="card-body">
                <h3 class="text-uppercase">Training Information</h3>
                <h3 class="card-title">
                    @Model.Training.Title ( @Model.Training.StartDate.ToString("ddd dd MMM, yyyy") -
                    @Model.Training.EndDate.ToString("ddd dd MMM, yyyy"))
                </h3>
            </div>
            <div class="card-body">
                <h5 class="text-uppercase">Dialy Activity Information</h5>
                <h5 class="">
                    Date:  @Model.DialyActivity.Date.ToString("dddd dd/MM/yyyy") (@Model.DialyActivity.StartTime - @Model.DialyActivity.FinishTime))
                    <br />Title: @Model.DialyActivity.Title
                </h5>
            </div>

            <hr />
            <div class="card-body">
                <h5 class="text-uppercase">INSTRUCTIONS:</h5>
                <h6 class="">

                    Please indicate your satisfaction using the ranking system where<br />
                    1 = Poor, 2 = Fair, 3 = Good, 4 = Very Good, 5 = Excellent

                </h6>
            </div>

            <hr />
            <!-- /.card-header -->
            <form method="post">
                <div class="card-body">

                    <input asp-for="Exampath" type="hidden" />
                    <input asp-for="TrainingId" type="hidden" value="@Model.Training.Id" />
                    <input asp-for="DialyId" type="hidden" value="@Model.DialyActivity.Id" />
                    <div class="row">
                        <div class="col-md-12">
                            @{ int sn = 2;}
                            @foreach (var item in Model.Datas.Where(x => x.IsModuleTopic == false).Take(1))
                            {
                                <div style=" box-shadow: 0px 2px 2px 0px rgb(50 50 50 / 83%);padding:10px;margin-bottom:5px;">
                                    <div class="row">
                                        <div class="col-md-6">

                                            <h5><b style="margin-right:15px;font-size:20px;">1</b>@item.Question</h5>
                                        </div>
                                        <div class="col-md-6">
                                            @if (item.EvaluationAnswerType == Domain.Models.EnumStatus.EvaluationAnswerType.Options)
                                            {
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="answer_@item.Id" id="one_@sn" value="1" required>
                                                    <label class="form-check-label" for="one_@sn">1</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="answer_@item.Id" id="two_@sn" value="2" required>
                                                    <label class="form-check-label" for="two_@sn">2</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="answer_@item.Id" id="three_@sn" value="3" required>
                                                    <label class="form-check-label" for="three_@sn">3</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="answer_@item.Id" id="four_@sn" value="4" required>
                                                    <label class="form-check-label" for="four_@sn">4</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="answer_@item.Id" id="five_@sn" value="5" required>
                                                    <label class="form-check-label" for="five_@sn">5</label>
                                                </div>
                                            }
                                            else
                                            {
                                                <input class="form-control" type="text" name="answer_@item.Id" required>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                            <div style=" box-shadow: 0px 2px 2px 0px rgb(50 50 50 / 83%);padding:10px;margin-bottom:5px;">
                                <div class="row">

                                    <div class="col-md-6">

                                        <h5><b style="margin-right:15px;font-size:20px;">2</b>Rank the relevance of content of Topics covered to the Session objectives: </h5>
                                    </div>
                                    <div class="col-md-6">

                                    </div>
                                </div>
                            </div>
                            @foreach (var item in Model.Datas.Where(x => x.IsModuleTopic == true))
                            {

                                <div style=" box-shadow: 0px 2px 2px 0px rgb(50 50 50 / 83%);padding:10px;margin-bottom:5px;">
                                    <div class="row">

                                        <div class="col-md-6">

                                            <h5><b style="margin-right:5px;font-size:10px;margin-left:20px;"></b>@item.Question</h5>
                                        </div>
                                        <div class="col-md-6">
                                            @if (item.EvaluationAnswerType == Domain.Models.EnumStatus.EvaluationAnswerType.Options)
                                            {
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="answer_@item.Id" id="one_@sn" value="1" required>
                                                    <label class="form-check-label" for="one_@sn">1</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="answer_@item.Id" id="two_@sn" value="2" required>
                                                    <label class="form-check-label" for="two_@sn">2</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="answer_@item.Id" id="three_@sn" value="3" required>
                                                    <label class="form-check-label" for="three_@sn">3</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="answer_@item.Id" id="four_@sn" value="4" required>
                                                    <label class="form-check-label" for="four_@sn">4</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="answer_@item.Id" id="five_@sn" value="5" required>
                                                    <label class="form-check-label" for="five_@sn">5</label>
                                                </div>
                                            }
                                            else
                                            {
                                                <input class="form-control" type="text" name="answer_@item.Id" required>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }
                            @foreach (var item in Model.Datas.Where(x => x.IsModuleTopic == false).Skip(1))
                            {
                                <div style=" box-shadow: 0px 2px 2px 0px rgb(50 50 50 / 83%);padding:10px;margin-bottom:5px;">
                                    <div class="row">
                                        <div class="col-md-6">
                                            @{ sn++;}
                                            <h5><b style="margin-right:15px;font-size:20px;">@sn</b>@item.Question</h5>
                                        </div>
                                        <div class="col-md-6">
                                            @if (item.EvaluationAnswerType == Domain.Models.EnumStatus.EvaluationAnswerType.Options)
                                            {
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="answer_@item.Id" id="one_@sn" value="1" required>
                                                    <label class="form-check-label" for="one_@sn">1</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="answer_@item.Id" id="two_@sn" value="2" required>
                                                    <label class="form-check-label" for="two_@sn">2</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="answer_@item.Id" id="three_@sn" value="3" required>
                                                    <label class="form-check-label" for="three_@sn">3</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="answer_@item.Id" id="four_@sn" value="4" required>
                                                    <label class="form-check-label" for="four_@sn">4</label>
                                                </div>
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="answer_@item.Id" id="five_@sn" value="5" required>
                                                    <label class="form-check-label" for="five_@sn">5</label>
                                                </div>
                                            }
                                            else
                                            {
                                                <input class="form-control" type="text" name="answer_@item.Id" required>
                                            }
                                        </div>
                                    </div>
                                </div>
                            }

                        </div>
                    </div>


                    <!-- /.row -->
                </div>
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Submit</button>
                    <a href="javascript:history.back()" class="btn bg-gradient-warning btn-sm">Back</a>

                </div>
            </form>
        </div>
    </div>
</div>
@page
@model RazorWebUI.Areas.ITrainings.Pages.SponsorPage.UpdateModel
@{
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">UPDATE SPONSOR</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Sponsor.Id" />
                    <input type="hidden" asp-for="Sponsor.TrainingId" />
                    <div class="form-group">
                        <label asp-for="Sponsor.Name" class="control-label"></label>
                        <input asp-for="Sponsor.Name" class="form-control" />
                        <span asp-validation-for="Sponsor.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Sponsor.Description" class="control-label"></label>
                        <textarea asp-for="Sponsor.Description" class="form-control"></textarea>
                        <span asp-validation-for="Sponsor.Description" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="Sponsor.Location" class="control-label"></label>
                        <input asp-for="Sponsor.Location" class="form-control" />
                        <span asp-validation-for="Sponsor.Location" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="Sponsor.Website" class="control-label"></label>
                        <input asp-for="Sponsor.Website" class="form-control" />
                        <span asp-validation-for="Sponsor.Website" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Sponsor.Email" class="control-label"></label>
                        <input asp-for="Sponsor.Email" class="form-control" />
                        <span asp-validation-for="Sponsor.Email" class="text-danger"></span>
                    </div>
                    @if (!String.IsNullOrEmpty(Model.Sponsor.LogoUrl))
                    {
                        <div class="form-group">
                            <label class="control-label">Logo</label><br />
                            <img src="@Model.Sponsor.LogoUrl" style="max-height:200px;" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Change Logo</label><br />
                            <input type="file" class="control-label" asp-for="imagefile" accept="image/*" />
                        </div>
                    }
                    else
                    {
                        <div class="form-group">
                            <label class="control-label">Logo</label><br />
                            <input type="file" class="control-label" asp-for="imagefile" accept="image/*" required="required" />
                        </div>
                    }

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/lga.js"></script>
}

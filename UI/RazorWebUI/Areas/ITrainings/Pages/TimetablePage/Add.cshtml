@page
@model RazorWebUI.Areas.ITrainings.Pages.TimetablePage.AddModel
@{
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">ADD NEW TIMETABLE</h3> 
    </div>
    <!-- /.card-header --> 
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="TimeTable.TrainingId" value="@Model.Training.Id" />
                    <div class="form-group">
                        <label asp-for="TimeTable.Activity" class="control-label"></label>
                        <textarea asp-for="TimeTable.Activity" class="form-control"></textarea>
                        <span asp-validation-for="TimeTable.Activity" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="TimeTable.DateTime" class="control-label"></label>
                        <input asp-for="TimeTable.DateTime" class="form-control" />
                        <span asp-validation-for="TimeTable.DateTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TimeTable.Publish" class="control-label"></label>
                        <input asp-for="TimeTable.Publish" />
                        <span asp-validation-for="TimeTable.Publish" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TimeTable.ModuleTopicId" class="control-label"></label>
                        <select asp-for="TimeTable.ModuleTopicId" class="form-control">
                            <option value="">Choose Module Topic</option>
                            @foreach (var question in Model.ModuleTopicDropdownDto)
                            {
                                <option value="@question.Value">@question.Text</option>
                            }
                        </select>
                        <span asp-validation-for="TimeTable.ModuleTopicId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TimeTable.FacilitatorId" class="control-label"></label>
                        <select asp-for="TimeTable.FacilitatorId" class="form-control" required="required">
                            <option value="">Choose Facilitator</option>
                            @foreach (var question in Model.FacilitatorDropdownDto)
                            {
                                <option value="@question.Value">@question.Text</option>
                            }
                        </select>
                        <span asp-validation-for="TimeTable.FacilitatorId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/lga.js"></script>
}

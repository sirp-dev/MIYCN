@page
@model RazorWebUI.Areas.ITrainings.Pages.Admin.UpdateStatusModel
@{
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">UPDATE TRAINING STATUS FOR @Model.TrainingParticipant.User.FullnameX</h3>
         
    </div>
    <div class="card-header">
        <h4>Email: @Model.TrainingParticipant.User.Email</h4>
    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="TrainingParticipant.Id" />
                    <input type="hidden" asp-for="TrainingParticipant.TrainingId" />
                    <input type="hidden" asp-for="TrainingParticipant.UserId" />



                    <div class="form-group">
                        <label asp-for="TrainingParticipant.ParticipantTrainingStatus" class="control-label"></label>
                        @Html.DropDownListFor(model => model.TrainingParticipant.ParticipantTrainingStatus, new SelectList(Enum.GetValues(typeof(Domain.Models.EnumStatus.ParticipantTrainingStatus))), new { @class = "form-control" })
                        <span asp-validation-for="TrainingParticipant.ParticipantTrainingStatus" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TrainingParticipant.Reasons" class="control-label"></label>
                        <textarea asp-for="TrainingParticipant.Reasons" class="form-control"></textarea>
                        <span asp-validation-for="TrainingParticipant.Reasons" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

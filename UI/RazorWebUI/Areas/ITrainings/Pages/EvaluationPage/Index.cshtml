@page
@model RazorWebUI.Areas.ITrainings.Pages.EvaluationPage.IndexModel
@{
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">MANAGE EVALUATION QUESTIONS</h3>


        <a asp-page="./Add" class="btn bg-gradient-warning btn-sm" style="float:right;">New Question</a>
        <a asp-page="/EvaluationPage/Category/Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Manage Question Category</a>

    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <div style=" box-shadow: 0px 10px 20px 0px rgb(50 50 50 / 83%);padding:10px;">

             
            <div class="table-responsive">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>
                                Question
                            </th>

                            <th>Publish</th>
                            <th>Answer Type</th>
                            <th>Question Category</th>

                            <th>SortOrder</th>


                        </tr>
                    </thead>

                    @{
                        int sn = 0;
                    }
                    <tbody>
                        @foreach (var item in Model.Datas.OrderBy(x => x.SortOrder))
                        {
                            <tr>

                                <td>
                                    @{
                                        sn++;
                                    }
                                    @sn
                                </td>
                                <td>
                                    <a asp-page="./Update" asp-route-id="@item.Id">
                                        @Html.DisplayFor(modelItem => item.Question)

                                    </a>
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Publish)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EvaluationAnswerType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EvaluationQuestionCategory.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SortOrder)
                                </td>



                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

     
</div>
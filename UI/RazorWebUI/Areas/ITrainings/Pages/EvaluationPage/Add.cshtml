@page
@model RazorWebUI.Areas.ITrainings.Pages.EvaluationPage.AddModel
@{
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">ADD NEW EVALUATION QUESTIONS</h3> 
    </div>
    <!-- /.card-header --> 
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="EvaluationQuestion.Question" class="control-label"></label>
                        <textarea asp-for="EvaluationQuestion.Question" class="form-control"></textarea>
                        <span asp-validation-for="EvaluationQuestion.Question" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="EvaluationQuestion.Publish" class="control-label"></label>
                        <input asp-for="EvaluationQuestion.Publish" />
                        <span asp-validation-for="EvaluationQuestion.Publish" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="EvaluationQuestion.SortOrder" class="control-label"></label>
                        <input asp-for="EvaluationQuestion.SortOrder" class="form-control" />
                        <span asp-validation-for="EvaluationQuestion.SortOrder" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="EvaluationQuestion.EvaluationAnswerType" class="control-label"></label>
                        @Html.DropDownListFor(model => model.EvaluationQuestion.EvaluationAnswerType, new SelectList(Enum.GetValues(typeof(Domain.Models.EnumStatus.EvaluationAnswerType))), new { @class = "form-control" })
                        <span asp-validation-for="EvaluationQuestion.EvaluationAnswerType" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/lga.js"></script>
}

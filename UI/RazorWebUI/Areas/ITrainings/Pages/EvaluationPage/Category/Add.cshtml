@page
@model RazorWebUI.Areas.ITrainings.Pages.EvaluationPage.Category.AddModel
@{
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">ADD NEW EVALUATION QUESTIONS CATEGORY</h3>
        <a asp-page="/EvaluationPage/Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back to Question</a>

    </div>
    <!-- /.card-header --> 
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                     
                    <div class="form-group">
                        <label asp-for="EvaluationQuestionCategory.Name" class="control-label"></label>
                        <textarea asp-for="EvaluationQuestionCategory.Name" class="form-control"></textarea>
                        <span asp-validation-for="EvaluationQuestionCategory.Name" class="text-danger"></span>
                    </div> 
                    
                    
                    
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/lga.js"></script>
}

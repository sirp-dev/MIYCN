@page
@model RazorWebUI.Areas.ITrainings.Pages.ModulePage.UpdateModuleTopicModel
@{
}
<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">UPDATE MODULE TOPICS</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ModuleTopic.Id" />
                    <input type="hidden" asp-for="ModuleTopic.ModuleId" />

                    <div class="form-group">
                        <label asp-for="ModuleTopic.Title" class="control-label"></label>
                        <input asp-for="ModuleTopic.Title" class="form-control" />
                        <span asp-validation-for="ModuleTopic.Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ModuleTopic.Description" class="control-label"></label>
                        <textarea asp-for="ModuleTopic.Description" class="form-control"></textarea>
                        <span asp-validation-for="ModuleTopic.Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ModuleTopic.Content" class="control-label"></label>
                        <textarea asp-for="ModuleTopic.Content" class="form-control summernote"></textarea>
                        <span asp-validation-for="ModuleTopic.Content" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-primary" />
                        <a asp-page="./Info" asp-route-id="@Model.ModuleTopic.ModuleId" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/js/lga.js"></script>
}

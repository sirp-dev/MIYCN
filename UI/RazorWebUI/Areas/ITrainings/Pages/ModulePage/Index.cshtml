@page
@model RazorWebUI.Areas.ITrainings.Pages.ModulePage.IndexModel
@{
}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">MANAGE MODULE</h3>


        <a asp-page="./Add" class="btn bg-gradient-warning btn-sm" style="float:right;">New Module</a>

    </div>
    <!-- /.card-header -->
    <div class="card-body">
        
            <div class="table-responsive">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>S/N</th>
                            <th>
                                Title
                            </th>
                            <th>Topics</th>
                             

                        </tr>
                    </thead>

                    @{
                        int sn = 0;
                    }
                    <tbody>
                        @foreach (var item in Model.Datas)
                        {
                            <tr>

                                <td>
                                    @{
                                        sn++;
                                    }
                                    @sn
                                </td>
                                <td>
                                    <a asp-page="./Info" asp-route-id="@item.Id">
                                        @Html.DisplayFor(modelItem => item.Title)

                                    </a>
                                </td>
                                <td>
                                    @item.Topic.Count()
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
     </div>

     
</div>
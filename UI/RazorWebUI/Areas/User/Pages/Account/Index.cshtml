@page
@model RazorWebUI.Areas.User.Pages.Account.IndexModel
@{
}
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title">MY PROFILE</h6>
            </div>

            <div class="card-body">
                <div class="row">
                    <div class="col-md-12">
                        <div>
                            <div class="row" style="">
                                <div class="col-sm-6">
                                    <h6 style="padding:0;margin:0;">Passport Photograph</h6>
                                    <div style="padding:5px;background-color:white;">
                                        <img src="@Model.UserDatas.PassportFilePathUrl" style="max-height:120px;" />
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <h6 style="padding:0;margin:0;">Profile BarCode</h6>
                                    <div style="padding:5px;background-color:white;">
                                        <img class="" src="data:image/jpg;base64,@(Convert.ToBase64String(Model.UserDatas.BarcodeImage))" style="max-height:120px;" />

                                    </div>
                                    <div>

                                        <a href="data:application/octet-stream;base64,@(Convert.ToBase64String(Model.UserDatas.BarcodeImage))" download="MIYCN-@Model.UserDatas.FullnameX.Replace(" ", "_")-Barcode.jpg" title="MIYCN-@Model.UserDatas.FullnameX.Replace(" ", "_")-Barcode" class="btn btn-primary btn-xs" style="text-transform:uppercase;margin-bottom:7px;">
                                            Download @Model.UserDatas.FullnameX BarCode
                                        </a>

                                    </div>
                                </div>

                            </div>
                            <dl class="row">


                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UserDatas.FullnameX)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UserDatas.FullnameX)
                                </dd>


                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UserDatas.PhoneNumber)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UserDatas.PhoneNumber)
                                </dd>


                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UserDatas.Email)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UserDatas.Email)
                                </dd>


                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UserDatas.DateOfBirth)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UserDatas.DateOfBirth)
                                </dd>




                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UserDatas.Religion)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UserDatas.Religion)
                                </dd>



                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UserDatas.UserStatus)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UserDatas.UserStatus)
                                </dd>


                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UserDatas.Gender)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UserDatas.Gender)
                                </dd>

                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UserDatas.MaritalStatus)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UserDatas.MaritalStatus)
                                </dd>

                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UserDatas.Role)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UserDatas.Role)
                                </dd>




                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UserDatas.PlaceOfWork)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UserDatas.PlaceOfWork)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UserDatas.Address)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UserDatas.Address)
                                </dd>


                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UserDatas.CurrentState)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UserDatas.CurrentState)
                                </dd>


                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UserDatas.CurrentLga)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UserDatas.CurrentLga)
                                </dd>




                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UserDatas.Address)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UserDatas.Address)
                                </dd>





                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UserDatas.DateOfBirth)
                                </dt>
                                <dd class="col-sm-10">
                                    @if (Model.UserDatas.DateOfBirth != null)
                                    {
                                        @Model.UserDatas.DateOfBirth.Value.Date.ToString("dd MMM, yyyy")

                                    }
                                </dd>






                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UserDatas.StateOrigin)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UserDatas.StateOrigin)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UserDatas.LgaOrigin)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UserDatas.LgaOrigin)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UserDatas.Country)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UserDatas.Country)
                                </dd>


                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UserDatas.PassportFilePathUrl)
                                </dt>
                                <dd class="col-sm-10">

                                    <img src="@Model.UserDatas.PassportFilePathUrl" style="max-height:200px;" />

                                </dd>



                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UserDatas.IdCardUrl)
                                </dt>
                                <dd class="col-sm-10">

                                    <img src="@Model.UserDatas.IdCardUrl" style="max-height:200px;" />

                                </dd>



                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UserDatas.BankName)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UserDatas.BankName)
                                </dd>


                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UserDatas.BankAccount)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UserDatas.BankAccount)
                                </dd>


                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.UserDatas.AccountNumber)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.UserDatas.AccountNumber)
                                </dd>

                            </dl>
                            
                            <div>
                                @foreach (var item in Model.UserDatas.ProfileCategories)
                                {
                                    <div class="daiv" style="margin-bottom:20px;">
                                        <h4>@item.Title</h4>
                                        <div>
                                            @foreach (var list in item.ProfileCategoryLists)
                                            {


                                                @if (item.Title.ToUpper().Contains("EDUCATION"))
                                                {
                                                    <div class="secdaiv">

                                                        @if (!String.IsNullOrEmpty(list.Qualification))
                                                        {
                                                            <div>
                                                                <strong>
                                                                    @if (!String.IsNullOrEmpty(list.FieldOfStudy))
                                                                    {
                                                                        @list.FieldOfStudy

                                                                    }

                                                                </strong>
                                                                <br />
                                                                <strong>

                                                                    @if (!String.IsNullOrEmpty(list.Qualification))
                                                                    {
                                                                        @list.Qualification

                                                                    }
                                                                </strong> <span>
                                                                    @if (!String.IsNullOrEmpty(list.StartDate))
                                                                    {

                                                                        <span>
                                                                            @list.StartDate
                                                                        </span>

                                                                    } -  @if (list.Currently == false)
                                                                    {
                                                                        @if (!String.IsNullOrEmpty(list.EndDate))
                                                                        {

                                                                            @list.EndDate

                                                                        }
                                                                    }
                                                                    else
                                                                    {
                                                                        <text>Current</text>

                                                                    }
                                                                </span>
                                                                <br />
                                                                <strong>
                                                                    @if (!String.IsNullOrEmpty(list.Title))
                                                                    {

                                                                        @list.Title

                                                                    }
                                                                </strong> @if (!String.IsNullOrEmpty(list.City))
                                                                {
                                                                    <span>
                                                                        - @list.City
                                                                    </span>

                                                                }
                                                            </div>

                                                        }

                                                    </div>}


                                                @if (item.Title.ToUpper().Contains("EXPERIENCE"))
                                                {
                                                    <div class="secdaiv">
                                                        @if (!String.IsNullOrEmpty(list.Title))
                                                        {
                                                            <div>
                                                                <strong>
                                                                    @if (!String.IsNullOrEmpty(list.Title))
                                                                    {

                                                                        @list.Title

                                                                    }
                                                                </strong> <span>
                                                                    @if (!String.IsNullOrEmpty(list.StartDate))
                                                                    {

                                                                        @list.StartDate

                                                                    } @if (list.Currently == false)
                                                                    {
                                                                        @if (!String.IsNullOrEmpty(list.EndDate))
                                                                        {

                                                                            <text> -</text> @list.EndDate

                                                                        }
                                                                    }
                                                                    else
                                                                    {
                                                                        <text>Current</text>

                                                                    }
                                                                </span>
                                                                <br />
                                                                <strong>
                                                                    @if (!String.IsNullOrEmpty(list.Employer))
                                                                    {

                                                                        @list.Employer

                                                                    }
                                                                </strong> @if (!String.IsNullOrEmpty(list.City))
                                                                {
                                                                    <span>
                                                                        - @list.City
                                                                    </span>

                                                                }
                                                                <br />
                                                                @if (!String.IsNullOrEmpty(list.Description))
                                                                {
                                                                    <span>
                                                                        @Html.Raw(list.Description)
                                                                    </span>

                                                                }
                                                            </div>

                                                        }
                                                    </div>
                                                }

                                                 
                                            }
                                        </div>


                                    </div>

                                }
                            </div>


                        </div>



                    </div>
                </div>
            </div>

            <div class="card-footer">
                <a href="javascript:history.back()" class="btn bg-gradient-warning btn-sm">Back</a>
                <a asp-page="./UpdateProfile" class="btn btn-danger btn-sm">Update</a>
            </div>
        </div>
    </div>
</div>
@page
@model RazorWebUI.Areas.User.Pages.Admin.AddModel
@{
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">CREATE NEW ACCOUNT</h3>

    </div>
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <form method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="form-group">
                        <label asp-for="RegisterDto.FirstName" class="control-label"></label>
                        <input asp-for="RegisterDto.FirstName" class="form-control" id="upper1" oninput="myUppercase('upper1')" />
                        <span asp-validation-for="RegisterDto.FirstName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="RegisterDto.MiddleName" class="control-label"></label>
                        <input asp-for="RegisterDto.MiddleName" class="form-control" id="upper2" oninput="myUppercase('upper2')" />
                        <span asp-validation-for="RegisterDto.MiddleName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="RegisterDto.LastName" class="control-label"></label>
                        <input asp-for="RegisterDto.LastName" class="form-control" id="upper3" oninput="myUppercase('upper3')" />
                        <span asp-validation-for="RegisterDto.LastName" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="RegisterDto.Phone" class="control-label"></label>
                        <input asp-for="RegisterDto.Phone" class="form-control" />
                        <span asp-validation-for="RegisterDto.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RegisterDto.Email" class="control-label"></label>
                        <input asp-for="RegisterDto.Email" class="form-control" />
                        <span asp-validation-for="RegisterDto.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="RegisterDto.PlaceOfWork" class="control-label"></label>
                        <input asp-for="RegisterDto.PlaceOfWork" class="form-control" />
                        <span asp-validation-for="RegisterDto.PlaceOfWork" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Role" class="control-label">User Category</label>
                        <select asp-for="Role" class="form-control" required="required">
                            <option value="">Choose</option>
                            
                            <option value="Facilitator">Facilitator</option>
                            <option value="Staff">Staff</option>
                        </select>
                    </div>

                    

                    <div class="form-group">
                        <input type="submit" value="Continue" class="btn btn-primary" />
                        <a asp-page="./Index" class="btn bg-gradient-warning btn-sm" style="float:right;">Back</a>

                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

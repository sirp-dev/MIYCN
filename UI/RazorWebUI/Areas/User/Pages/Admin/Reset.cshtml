@page
@model RazorWebUI.Areas.User.Pages.Admin.ResetModel
@{
}

<div class="card card-default">
    <div class="card-header">
        <h3 class="card-title">@Model.UserData.FullnameX Reser Password</h3>

    </div>
    @if (TempData["success"] != null)
    {
        <div class="alert alert-success">
            <strong>@TempData["success"]</strong>

        </div>
    }

    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger">
            <strong>@TempData["error"]</strong>
        </div>
    }
    <!-- /.card-header -->

    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <h4>Account Email: @Model.UserData.Email</h4>
                <form id="change-password-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="UserData.Id" />

                    <div class="form-group">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" />

                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Reset Password" class="btn btn-primary" />
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Admin") || User.IsInRole("mSuperAdmin"))
                        {
                           <a asp-page="./Index" class="btn btn-danger">
                               Back to User List
                           </a>
                        }
                        else
                        {
                            <a asp-page="/Admin/Index" asp-area="Dashboard" class="btn bg-gradient-warning btn-sm" style="float:right;">Back to Dashboard</a>

                        }
                        
                    </div>
                </form>
            </div>
        </div>


        <!-- /.row -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
